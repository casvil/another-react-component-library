{
  "name": "another-react-component-library",
  "version": "0.7.0",
  "author": "David Casanellas",
  "repository": {
    "type": "git",
    "url": "https://github.com/casvil/another-react-component-library.git"
  },
  "homepage": "https://github.com/casvil/another-react-component-library#readme",
  "description": "A customizable React 19 component library built with Vite, Tailwind CSS v4 and TypeScript.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "test": "vitest",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "clsx": "^2.1.1",
    "lucide-react": "^0.515.0",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@eslint/js": "^9.25.0",
    "@storybook/addon-a11y": "^9.0.9",
    "@storybook/addon-docs": "^9.0.9",
    "@storybook/addon-vitest": "^9.0.9",
    "@storybook/react-vite": "^9.0.9",
